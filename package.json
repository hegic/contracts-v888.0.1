  "scripts": {
    "build": "npx hardhat clean && npx hardhat compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "lint": "npx solhint contracts/*.sol && npx eslint . && npx markdownlint --ignore node_modules **/*.md",
    "format": "prettier --check \"contracts/**/*.sol\" \"test/**/*.ts\" \"**/*.md\" \"**/*.yml\"",
    "prettier:write": "prettier --write \"contracts/**/*.sol\" \"test/**/*.ts\" \"**/*.md\" \"**/*.yml\"",
    "test": "npx hardhat test",
    "coverage": "npx hardhat clean && npx hardhat compile && npx hardhat coverage",
    "deploy": "npx hardhat deploy"
  },
